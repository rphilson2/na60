<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Uncommon_Circumstance_Require_Comments</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
RecordType.DeveloperName = &#39;Retail_Welcome_Call_Disposition_Initial&#39;,
IsPickVal(Initial_Call_Outcome__c, &#39;Uncommon Circumstance&#39;),
IsBlank(Description ))</errorConditionFormula>
    <errorMessage>Comments must be added to the task when an initial call outcome of Uncommon Circumstance is selected.</errorMessage>
</ValidationRule>

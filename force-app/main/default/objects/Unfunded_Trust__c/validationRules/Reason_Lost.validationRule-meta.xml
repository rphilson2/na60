<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reason_Lost</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
ISPICKVAL(Status__c, &quot;Inactive&quot;), 
ISBLANK(TEXT(Reason_Lost__c))
)</errorConditionFormula>
    <errorDisplayField>Reason_Lost__c</errorDisplayField>
    <errorMessage>The &quot;Reason Lost&quot; field is required to be completed when the &quot;Status&quot; field is set to &quot;Inactive&quot;.</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Max_hours_Participant</fullName>
    <active>true</active>
    <description>Particpant max hours cannot be larger than the established in the Activity Duration</description>
    <errorConditionFormula>Duration_hours__c &gt; Volunteer_Activity__r.Duration_hours__c</errorConditionFormula>
    <errorDisplayField>Duration_hours__c</errorDisplayField>
    <errorMessage>Duration cannot exceed Activity Duration</errorMessage>
</ValidationRule>

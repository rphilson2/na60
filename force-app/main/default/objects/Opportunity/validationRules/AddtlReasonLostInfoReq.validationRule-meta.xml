<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AddtlReasonLostInfoReq</fullName>
    <active>true</active>
    <errorConditionFormula>AND (
ISPICKVAL(StageName, &quot;Closed Lost&quot;),
ISBLANK( Addtl_Reason_Lost_Information__c )
)</errorConditionFormula>
    <errorDisplayField>Addtl_Reason_Lost_Information__c</errorDisplayField>
    <errorMessage>Additional Reason Lost information is required for this Opportunity Stage.</errorMessage>
</ValidationRule>
